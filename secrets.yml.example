# ==========================================
# OpenAI Configuration
# ==========================================
openai:
  api_key: "sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
  organization_id: "org-XXXXXXXXXXXXXXXXXXXXXXXX"  # Optional

# ==========================================
# PubNub Configuration
# ==========================================
pubnub:
  publish_key: "pub-c-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
  subscribe_key: "sub-c-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
  secret_key: "sec-c-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# ==========================================
# JWT Configuration
# ==========================================
jwt:
  secret_key: "CHANGE_ME_RANDOM_SECRET_KEY_MIN_32_CHARS_LONG_USE_OPENSSL_RAND_BASE64_32"
  algorithm: "HS256"
  access_token_expire_minutes: 30
  refresh_token_expire_days: 7

# ==========================================
# Redis Configuration
# ==========================================
redis:
  production:
    host: "pm-doc-intel-redis-production.xxxxxx.cache.amazonaws.com"
    port: 6379
    password: ""  # ElastiCache usually doesn't use password
    db: 0

  staging:
    host: "pm-doc-intel-redis-staging.xxxxxx.cache.amazonaws.com"
    port: 6379
    password: ""
    db: 0

  development:
    host: "localhost"
    port: 6379
    password: "redispassword"
    db: 0

# ==========================================
# Email Configuration (SMTP)
# ==========================================
email:
  smtp_host: "smtp.gmail.com"  # or smtp.sendgrid.net, etc.
  smtp_port: 587
  smtp_username: "your-email@example.com"
  smtp_password: "your-app-specific-password"
  from_email: "noreply@example.com"
  from_name: "PM Document Intelligence"

# ==========================================
# Monitoring & Logging
# ==========================================
monitoring:
  # Sentry (Error tracking)
  sentry_dsn: "https://xxxxxxxxxxxx@o000000.ingest.sentry.io/0000000"

  # New Relic (APM)
  new_relic_license_key: "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
  new_relic_app_name: "PM Document Intelligence"

  # Datadog (Monitoring)
  datadog_api_key: "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
  datadog_app_key: "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# ==========================================
# Slack Integration
# ==========================================
slack:
  webhook_url: "https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX"
  bot_token: "xoxb-xxxxxxxxxxxx-xxxxxxxxxxxx-xxxxxxxxxxxxxxxxxxxxxxxx"
  channel_alerts: "#alerts"
  channel_deployments: "#deployments"

# ==========================================
# PagerDuty Integration
# ==========================================
pagerduty:
  integration_key: "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
  api_key: "u+xxxxxxxxxxxxxxxxxx"

# ==========================================
# SSL/TLS Certificates
# ==========================================
ssl:
  certificate_arn: "arn:aws:acm:us-east-1:123456789012:certificate/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
  domain_name: "api.example.com"

# ==========================================
# S3 Buckets
# ==========================================
s3:
  documents_bucket: "pm-doc-intel-documents-production-123456789012"
  backups_bucket: "pm-doc-intel-backups-production-123456789012"

# ==========================================
# ECR Repository
# ==========================================
ecr:
  repository_url: "123456789012.dkr.ecr.us-east-1.amazonaws.com/pm-document-intelligence"

# ==========================================
# Feature Flags
# ==========================================
features:
  enable_analytics: true
  enable_email_notifications: true
  enable_slack_notifications: true
  enable_auto_scaling: true
  enable_multi_region: false

# ==========================================
# Rate Limiting
# ==========================================
rate_limiting:
  enabled: true
  requests_per_minute: 60
  requests_per_hour: 1000

# ==========================================
# Security
# ==========================================
security:
  # CORS allowed origins
  cors_origins:
    - "https://example.com"
    - "https://app.example.com"
    - "http://localhost:3000"

  # API key for internal services
  internal_api_key: "CHANGE_ME_INTERNAL_API_KEY_FOR_SERVICE_TO_SERVICE_COMMUNICATION"

  # Encryption key for sensitive data
  encryption_key: "CHANGE_ME_32_BYTE_ENCRYPTION_KEY_USE_FERNET_GENERATE_KEY"

# ==========================================
# Third-Party Services
# ==========================================
# Add any additional third-party service credentials here
third_party:
  # Example: Stripe
  stripe_api_key: "sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
  stripe_webhook_secret: "whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxx"

  # Example: Twilio
  twilio_account_sid: "ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
  twilio_auth_token: "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
  twilio_phone_number: "+15555551234"
